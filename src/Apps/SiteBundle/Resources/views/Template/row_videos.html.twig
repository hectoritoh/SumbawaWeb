<div class="row-fluid" >


    {%   for video in media  %}

    <div class="span3">
        <a href="{{  path("verImagen" , { 'id_imagen' : video.id }) }}"  >
            <ul style="list-style:none outside none; margin-left: 0px;">
                <li  style="margin-left: 0px;">
                    <h3 class="label_subtitulo_noticias">{{  video.titulo }}</h3>
                    <a class="video-popup"  href="http://www.youtube.com/watch?v={{video.link}}" >  
                    <img style="width: 100%;height: 133px" src="http://img.youtube.com/vi/{{video.link}}/0.jpg" alt="" />                    
                     </a>
                </li>
            </ul>
        </a>
    </div>

    {%   endfor %}

</div>