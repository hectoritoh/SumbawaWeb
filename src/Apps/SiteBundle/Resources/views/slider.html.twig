<div id="home_carousel" class="carousel slide" style="margin-bottom: 0px;">

    <div class="carousel-inner">

        {%  for  banner in banners %}
        <div   style="width: 100%;" class="{%  if loop.first %}active{% endif %} item">
            <img style="width: 100%;height: 480px" src="{{ asset('uploads/banners/'  ~ banner.imagen ) }}" alt="{{   banner.descripcion  }}" />                  
        </div>
        {%  endfor  %}

    </div>
    <a class="carousel-control left" href="#home_carousel" data-slide="prev">&lsaquo;</a>
    <a class="carousel-control right" href="#home_carousel" data-slide="next">&rsaquo;</a>
</div>
<div style="width: 100%;padding-top: -10px; height: 45px;background-image:url('{{  asset('img/separador.png') }}');background-repeat:repeat-x;"></div> 
