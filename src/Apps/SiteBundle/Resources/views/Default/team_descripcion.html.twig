{%  extends "AppsSiteBundle::layout.html.twig" %}
{%   block carrousel  %}
    <div style="width: 100%;padding-top: -10px; height: 480px;background-image:url('{{  asset("img/slider_team.png") }}');">
    </div> 
{%   endblock %}
{%  block contenido_top %}
{% endblock %}

{%  block contenido_mid %}


<div  class="row-fluid" >
    <div class="span10 offset1" >



        <div class="row-fluid">
            <ul class="breadcrumb" style="background-color: white;">
                <li ><a href="{{  path('home') }}">Home</a> <span class="divider">/</span></li>
                <li ><a href="{{  path('team') }}">Team</a> <span class="divider">/</span></li>
                <li class="active">{{ selected.nombre }}</li>
            </ul> 
        </div>


        <div class="row-fluid">
            <div class="span2">


{{   include("AppsSiteBundle:Menu:left.team.html.twig", {'personal':personal }) }}


            </div>

            <div class="span10"  >
                <div class="row-fluid"  >
                    <label id="nombre_team" class="menu-productos" style="font-size: 30px;color: #006dcc">{{  selected.nombre }}</label>
                </div>
                <div class="row-fluid"  >
                    <div class="span6">
                        <div class="navbar">
                            <div class="navbar-inner personal-menu-bar">
                                <ul class="nav cat-nav personal-menu">
                                    <li class="personal-menu-item activo"  onclick="mostrarPerfil(this);" >
                                        <a  id="perfil-link"   >PERFIL</a>
                                    </li>
                                    <li  class="personal-menu-item " onclick="mostrarEntrevista(this);"  >
                                        <a   >ENTREVISTA</a>
                                    </li>                     
                                    <li  class="personal-menu-item " onclick="mostrarImagenes(this);"  >
                                        <a   >IMAGENES</a>
                                    </li>                     
                                    <li  class="personal-menu-item " onclick="mostrarVideos(this);"  >
                                        <a   >VIDEOS</a>
                                    </li>                     
                                </ul>
                            </div>
                        </div>

                        <div id="preguntas" class="team-block" >
                            
                            <p class="pregunta" style="font-weight: bold"> Estatura: </p>
                            <p class="respuesta" id="estatura"> {{  selected.estatura }} cm </p>  
                            
                            
                            <p class="pregunta" style="font-weight: bold;padding-top: 20px"> Sponsors: </p>
                            <p class="respuesta" id="sponsors"> {{  selected.sponsor }} </p>
                            
                            
                            <p class="pregunta" style="font-weight: bold;padding-top: 20px"> Anecdota: </p>
                            <p class="respuesta" id="anecdota"> {{  selected.anecdota }} </p>
                            
                            
                            <p class="pregunta" style="font-weight: bold;padding-top: 20px"> Lo que mas te gusta de surfear : </p>
                            <p class="respuesta" id="gustos"> {{   selected.extra1 }}</p>

                        </div>

                        <div id="entrevista" class="team-block" style="display: none;"  >                                                      
                            {% for entrevista in  selected.entrevistas %}
                            <p class="pregunta" style="font-weight: bold"> {{entrevista.pregunta}}: </p>
                            <p class="respuesta" id="estatura"> {{  entrevista.respuesta }} </p>  
                            {% endfor %}
                        </div>
                        <div id="imagenes" class="team-block" style="display: none;"  >                                                      
                           
                            
                        </div>
                        <div id="videos" class="team-block" style="display: none;"  >                                                      
                             
                            <div>
                              <li  style="margin-left: 0px;">
                               
                                <a class="video-popup"  href="http://www.youtube.com/watch?v=JrxvlBuQ_lA" >  
                                    <img style="width: 50%;height: 133px" src="http://img.youtube.com/vi/JrxvlBuQ_lA/0.jpg" alt="" />                    
                                </a>
                            </li>
                            </div>

                          
                            
                        </div>
                        
                        
                        
                        
                    </div>
                    <div class="span5 offset1">
                        <div style="margin-top: 65px;width: 213px;height: 284px; ">
                            <img style="width:100%; height: 100%; " src="{{  asset('uploads/personal/' ~ selected.imagen ) }}" />
                        </div>
                    </div>
                </div>


            </div>
        </div> 


    </div>

</div>





{% endblock %}

{%  block contenido_bottom %}
{%  endblock %}